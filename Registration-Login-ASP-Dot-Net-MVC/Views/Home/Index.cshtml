<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] Home</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <style>
        .btn-spacing {
            margin-right: 10px;
        }
    </style>
</head>
<body>

    <!-- Display TempData messages -->
    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show mt-4" role="alert">
            @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }
    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show mt-4" role="alert">
            @TempData["ErrorMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    <div class="container">
        <div class="row justify-content-center mt-5">
            <div class="col-md-8 col-lg-6 col-xl-4 text-center">
                <h1 class="mb-4">Welcome to Our Website</h1>
                <p class="lead mb-4">Please select an option:</p>
                <div class="d-flex justify-content-center">
                    <a href="/Account/Register" class="btn btn-lg btn-primary btn-spacing">Register</a>
                    <a href="/Account/Login" class="btn btn-lg btn-success">Login</a>
                </div>
            </div>
        </div>
    </div>

    <!-- JavaScript libraries -->
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
