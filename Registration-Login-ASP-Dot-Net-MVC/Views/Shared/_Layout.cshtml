<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" rel="stylesheet">
    <title>Bootstrap Navbar Example</title>
    <style>
        .facebook-color { color: #3b5998; }
        .twitter-color { color: #1da1f2; }
        .google-color { color: #db4437; }
        .instagram-color { color: #c32aa3; }
        .linkedin-color { color: #0077b5; }
        .github-color { color: #24292e; }

        /* Adjust the size of the icons */
        .btn-floating i {
            font-size: 3vh; /* Adjust the size as needed */
        }
    </style>
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-light bg-light">
        <div class="container">
            <a class="navbar-brand" href="#">Navbar</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse" id="navbarSupportedContent">
                <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                    <li class="nav-item active">
                        <a class="nav-link" href="#">Home <span class="visually-hidden">(current)</span></a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="#">Link</a>
                    </li>
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                            Dropdown
                        </a>
                        <ul class="dropdown-menu" aria-labelledby="navbarDropdown">
                            <li><a class="dropdown-item" href="#">Action</a></li>
                            <li><a class="dropdown-item" href="#">Another action</a></li>
                            <li><hr class="dropdown-divider"></li>
                            <li><a class="dropdown-item" href="#">Something else here</a></li>
                        </ul>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link disabled" href="#" tabindex="-1" aria-disabled="true">Disabled</a>
                    </li>
                </ul>
                <form class="d-flex">
                    <input class="form-control me-2" type="search" placeholder="Search" aria-label="Search">
                    <button class="btn btn-outline-success" type="submit">Search</button>
                </form>
            </div>
        </div>
    </nav>

    <!-- Main content area -->
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <!-- Footer content area -->
    <footer class="bg-light text-center text-muted">
        <!-- Grid container -->
        <div class="container p-4 pb-0">
            <!-- Section: Social media -->
            <section class="mb-4">
                <!-- Facebook -->
                <a class="btn btn-floating m-1" href="#!" role="button"><i class="fab fa-facebook-f facebook-color"></i></a>

                <!-- Twitter -->
                <a class="btn btn-floating m-1" href="#!" role="button"><i class="fab fa-twitter twitter-color"></i></a>

                <!-- Google -->
                <a class="btn btn-floating m-1" href="#!" role="button"><i class="fab fa-google google-color"></i></a>

                <!-- Instagram -->
                <a class="btn btn-floating m-1" href="#!" role="button"><i class="fab fa-instagram instagram-color"></i></a>

                <!-- Linkedin -->
                <a class="btn btn-floating m-1" href="#!" role="button"><i class="fab fa-linkedin-in linkedin-color"></i></a>

                <!-- Github -->
                <a class="btn btn-floating m-1" href="#!" role="button"><i class="fab fa-github github-color"></i></a>
            </section>
            <!-- Section: Social media -->
        </div>
        <!-- Grid container -->
        <!-- Copyright -->
        <div class="bg-light p-1">
            <div class="container">
                © 2024 Copyright:
                <a class="text-dark" href="https://www.linkedin.com/in/yuvraj96k/">Abhishek.Patil</a>
            </div>
        </div>
        <!-- Copyright -->
    </footer>


    <!-- Bootstrap JS Bundle -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
