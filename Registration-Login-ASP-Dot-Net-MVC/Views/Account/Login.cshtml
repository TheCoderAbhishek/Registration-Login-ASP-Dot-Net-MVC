@model Registration_Login_ASP_Dot_Net_MVC.Models.AccountModel.LoginViewModel

<h2>Login</h2>

@if (ViewData["ErrorMessage"] != null)
{
    <div class="alert alert-danger" role="alert">
        @ViewData["ErrorMessage"]
    </div>
}

<div class="container mt-5">
    <div class="row justify-content-center mt-3">
        <div class="col-md-6">
            <div class="card">
                <div class="card-header">Login</div>
                <div class="card-body">
                    <form asp-action="Login" method="post">
                        <div class="form-group mt-2">
                            <label asp-for="Email">Email:</label>
                            <input asp-for="Email" class="form-control mt-2" />
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>
                        <div class="form-group mt-2">
                            <label asp-for="Password">Password:</label>
                            <div class="input-group">
                                <input asp-for="Password" id="passwordInput" type="password" class="form-control" />
                                <button class="btn btn-outline-secondary" type="button" onclick="togglePasswordVisibility('passwordInput', 'passwordToggleIcon')" style="min-width: 38px">
                                    <i id="passwordToggleIcon" class="fa fa-eye" aria-hidden="true"></i>
                                </button>
                            </div>
                            <span asp-validation-for="Password" class="text-danger"></span>
                        </div>
                    <div class="mt-3">
                        <button type="submit" class="btn btn-primary">Login</button>
                        <a href="@Url.Action("Index", "Home")" class="btn btn-dark">Back to Home</a>
                    </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section scripts {
    <script>
        function togglePasswordVisibility(inputId, iconId) {
            var x = document.getElementById(inputId);
            var icon = document.getElementById(iconId);
            if (x.type === "password") {
                x.type = "text";
                icon.className = "fa fa-eye-slash";
            } else {
                x.type = "password";
                icon.className = "fa fa-eye";
            }
        }
    </script>
}
