@model Registration_Login_ASP_Dot_Net_MVC.Models.AccountModel.RegisterViewModel

@{
    ViewData["Title"] = "Register";
}

<div class="container mt-5">
    <div class="row justify-content-center mt-3">
        <div class="col-md-6">
            <div class="card">
                <div class="card-header">Register</div>
                <div class="card-body">
                    <form asp-controller="Account" asp-action="Register" method="post">
                        <div class="form-group">
                            <label asp-for="Username">Username:</label>
                            <input asp-for="Username" class="form-control mt-2" />
                            <span asp-validation-for="Username" class="text-danger"></span>
                        </div>
                        <div class="form-group mt-2">
                            <label asp-for="Email">Email:</label>
                            <input asp-for="Email" class="form-control mt-2" />
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>
                        <div class="form-group mt-2">
                            <label asp-for="Password">Password:</label>
                            <input asp-for="Password" type="password" class="form-control mt-2" />
                            <span asp-validation-for="Password" class="text-danger"></span>
                        </div>
                        <div class="form-group mt-2">
                            <label asp-for="ConfirmPassword">Confirm Password:</label>
                            <input asp-for="ConfirmPassword" type="password" class="form-control mt-2" />
                            <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                        </div>
                        <div class="form-group mt-2">
                            <button type="submit" class="btn btn-primary">Register</button>
                            <a href="@Url.Action("Index", "Home")" class="btn btn-secondary">Back to Home</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

